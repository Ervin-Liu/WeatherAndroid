<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_hour_weather_re"
    android:gravity="center"
    android:layout_marginRight="15dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_hour_time"
        android:textSize="@dimen/default_size_14"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/iv_hour_weather_type"
        android:background="@drawable/ic_qing"
        android:layout_marginTop="@dimen/default_dp_5"
        android:layout_marginBottom="@dimen/default_dp_5"
        android:layout_width="@dimen/default_dp_24"
        android:layout_height="@dimen/default_dp_24"/>

    <TextView
        android:id="@+id/tv_temp"
        android:textSize="@dimen/default_size_14"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>