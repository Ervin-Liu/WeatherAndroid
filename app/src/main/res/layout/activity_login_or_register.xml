<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".activity.LoginOrRegisterActivity">
    
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_dp_150"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_login_new_user"
                android:text="@string/login_new_user"
                android:background="@drawable/register_background"
                android:textSize="@dimen/default_size_18"
                android:gravity="center"
                android:textColor="@color/color_login_yes"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/default_dp_10"
                android:paddingBottom="@dimen/default_dp_10"
                android:layout_width="@dimen/default_dp_150"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_login_user"
                android:text="@string/login_user"
                android:textSize="@dimen/default_size_18"
                android:textColor="@color/colorWhite"
                android:background="@drawable/login_background"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:paddingTop="@dimen/default_dp_10"
                android:paddingBottom="@dimen/default_dp_10"
                android:layout_width="@dimen/default_dp_150"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>