<!--            android:layout_height="@dimen/default_dp_24"/>-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_delete"
        android:background="@drawable/city_list_delete_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_delete_icon"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_city_delete"
            android:layout_width="@dimen/default_dp_30"
            android:layout_height="@dimen/default_dp_30"/>

    </RelativeLayout>

